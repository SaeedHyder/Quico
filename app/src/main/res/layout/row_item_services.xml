<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x180"
        android:layout_marginStart="@dimen/x3"
        android:layout_marginEnd="@dimen/x3"
        android:layout_marginBottom="@dimen/x5"
        android:layout_marginTop="@dimen/x10"
        app:cardCornerRadius="@dimen/x10"
        app:cardElevation="@dimen/x5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/service_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/plubmer"
                android:scaleType="centerCrop"/>
            
            <com.app.quico.ui.views.AnyTextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/plumbing_services"
                android:layout_alignBottom="@+id/service_image"
                android:textSize="@dimen/x20"
                android:textColor="@color/white"
                android:layout_margin="@dimen/x20"
                android:visibility="gone"
                app:typeface="@string/font_bold"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>