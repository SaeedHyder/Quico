<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_pdf_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x5"
        android:layout_marginEnd="@dimen/x5"
        android:layout_marginTop="@dimen/x5"
        android:layout_marginBottom="@dimen/x5"
        android:visibility="visible"
        app:cardCornerRadius="@dimen/x10"
        app:cardElevation="@dimen/x2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_pdf_left"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:scaleType="fitXY"
                android:src="@drawable/pdf_placeholder_2" />

            <com.app.quico.ui.views.AnyTextView
                android:id="@+id/txt_pdf_message_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/iv_pdf_left"
                android:layout_margin="@dimen/x5"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:text="File No 1"
                android:textColor="@color/app_black_text"
                android:textSize="@dimen/x12"
                app:typeface="@string/font_normal" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>