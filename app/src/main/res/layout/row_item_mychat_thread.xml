<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x3"
        android:layout_marginEnd="@dimen/x5"
        android:layout_marginStart="@dimen/x5"
        android:layout_marginTop="@dimen/x10"
        app:cardCornerRadius="@dimen/x5"
        app:cardElevation="@dimen/x5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/x15">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x60"
                android:src="@drawable/placeholder_thumb" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x10"
                android:layout_weight="0.8"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.app.quico.ui.views.AnyTextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electrical Company"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/font_normal" />

                <com.app.quico.ui.views.AnyTextView
                    android:id="@+id/txt_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="Electrician is on ites way"
                    android:maxLines="1"
                    android:textColor="@color/app_black_text"
                    android:textSize="@dimen/x14"
                    app:typeface="@string/font_normal" />

                <com.app.quico.ui.views.AnyTextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/x3"
                    android:gravity="end"
                    android:text="02:41 PM"
                    android:textColor="@color/app_gray_text"
                    android:textSize="@dimen/x11"
                    app:typeface="@string/font_normal" />


            </LinearLayout>

            <com.app.quico.ui.views.AnyTextView
                android:id="@+id/txtBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_name"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/x10"
                android:background="@drawable/badge_blue"
                android:gravity="center"
                android:maxLength="3"
                android:text="22"
                android:textColor="@color/white"
                android:textSize="@dimen/x10"
                android:visibility="visible"
                app:typeface="@string/font_normal" />


        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>